{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "rootDir": "src",
        "outDir": "build",
        "removeComments": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "sourceMap": false,
        "declaration": false,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules", "build"
    ]
}